<div class="container">
  <div class="alert alert-seccondary text-success mb-0">
  "ログインしました"
    <button type="button" class="close" data-dis-miss="alert">
      ✖️
    </button>
  </div>
  <% @memos.each do |memo| %>
    <div class="card">
      <%= memo.title %>
      <%= memo.content %>
      <%= link_to "削除する", memo_path(memo.id),method: :delete %>
    </div>
  <% end %>

  <%= form_with model: @memo do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :content %>
    <%= f.submit "投稿する" %>
  <% end %>

</div>